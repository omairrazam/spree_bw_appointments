<div class="modal fade" id="edit_appointment">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Edit Event</h4>
      </div>
      <div class="modal-body">
        <%= form_for [:admin, @appointment], remote: true  do |f| %>
          <div class="row">
            <div class="col-md-12">
              <%= render 'form', f: f %>

              <div class="form-actions" data-hook="buttons">
                <%= button Spree.t('actions.update'), 'ok', 'submit', {class: 'btn-success', data: { disable_with: "#{ Spree.t(:saving) }..." }} %>
                <!-- <span class="or"><%= Spree.t(:or) %></span> -->
                 <%= link_to 'Delete', 
                            [:admin,@appointment], 
                            method: :delete, 
                            class: 'btn btn-danger', 
                            data: { confirm: 'Are you sure?' }, 
                            remote: true unless @appointment.new_record? %>
              </div>
             
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
